<div class="container">
	<div class="row">
		

	   
	    
	    	<%= form_for @user, :html => {:multipart => true}, class: 'edit' do |form| %>
			    <div class="text-field">


				   <div class="form-group">
				    
				     <%= form.label :firstname %>
					  <%= form.text_field :firstname, type: 'text', class: 'form-control' %>
				   </div>

			   	
				   <div class="form-group">
				   	<%= form.label :lastname %>
				  	<%= form.text_field :lastname, type: 'text', class: 'form-control' %>
				   </div>
  

  					<div class="form-group">
					  <%= form.label :email %>
					  <%= form.text_field :email, type: 'email', class: 'form-control' %>
					</div>

					<div class="form-group">
						<div class="user-avatar">
								<%=image_tag @user.avatar.thumb.url%>

						</div>
				  		<%= form.label :avatar %>
				  		<%= form.file_field :avatar %>
				  	</div>
				</div>

			    <div class="submit-field pull-right">
			      <%= form.submit class: 'btn btn-default'%>
			      <%= link_to "Cancel", user_path(@user),  class: 'btn btn-default'%>
			    </div>

			    
			<% end %>

	</div>


</div>