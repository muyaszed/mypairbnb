<!DOCTYPE html>
<html>
<head>
  <%= include_gon %>
  
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="https://js.braintreegateway.com/v2/braintree.js"></script>
  <%= csrf_meta_tag %>

</head>
<body class="<%=controller_name%> <%=action_name%>">


  
    <nav class="navbar navbar-default">
      <div class="top_menu container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">
            W
          </a>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      
      
          <ul class="nav navbar-nav navbar-right">
            <li><a id="new-list" href="lists/new">Become A Host</a></li>
            <li><a href="#">Help</a></li>
            <% if signed_in? -%>
              <li id="user-menu" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                <%= link_to do %>
                <div class="menu-avatar">
                  <%=image_tag current_user.avatar.small_thumb.url %>
                </div>
                
                <%end%>
              </li>
              <ul class="dropdown-menu" aria-labelledby="user-menu">
                 <li><%= link_to "Edit Profile", [:edit, current_user]%></li>
                 <li><%= link_to t(".sign_out"), sign_out_path, method: :delete %></li>
              </ul>


             
            <% else %>
              <li><%= link_to t(".sign_up"), sign_up_path %></li>
              <li id="dropdownMenu1" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"><a href="#">Log in</a></li>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                <li><%= link_to "Normal Sign in", sign_in_path %></li>
                <li><%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %></li>
               
              </ul>
            <% end -%>
            
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!--end of container fluid-->
    </nav>
  
 

  

  <%= yield %>

  <footer>
    <div class="container-fluid">
      <div class="social-wrapper row text-center">

      <ul class="list-inline">

        <li class="circle"><a href=""><i class="fa fa-facebook-square fa-3x"></i></a></li>
        <li class="circle"><a href=""><i class="fa fa-twitter-square fa-3x"></i></a></li>
        <li class="circle"><a href=""><i class="fa fa-google-plus-square fa-3x"></i></a></li>
      </ul>
       
       
       
           
      </div>
    </div>
  </footer>
</body>
</html>
